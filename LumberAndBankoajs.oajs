function isNotEmptyTree(i,j){
	if(emptyTrees.length === 0){
		return true;
	}

	for(var k=0; k < emptyTrees.length; k++){
		var curr = emptyTrees[k];
		if(curr[0] === i && curr[1] === j){
			return false;
		}
	}

	return true;
}
